# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Environment
ENVIRONMENT=development  # development, staging, production

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600  # seconds (1 hour)
RATE_LIMIT_ENABLED=true

# Model Configuration
CLIP_MODEL=ViT-B/32  # ViT-B/32, ViT-B/16, ViT-L/14
WHISPER_MODEL=base   # tiny, base, small, medium, large
DEVICE=cuda          # cuda or cpu
MODEL_CACHE_DIR=./models

# Safety Configuration
TOXICITY_THRESHOLD=0.7
TOXICITY_MODEL=unitary/toxic-bert
PII_DETECTION_ENABLED=true
PII_REDACTION_ENABLED=true
BIAS_MONITORING_ENABLED=true
FAIRNESS_THRESHOLD=0.8
HALLUCINATION_CHECK_ENABLED=true

# PII Entity Types
PII_ENTITIES=EMAIL_ADDRESS,PHONE_NUMBER,CREDIT_CARD,US_SSN,PERSON,LOCATION

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/multimodal_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
EMBEDDING_CACHE_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Logging
LOG_FORMAT=json  # json or text
LOG_FILE=logs/app.log
AUDIT_LOG_FILE=logs/audit.log
AUDIT_LOG_ENABLED=true

# Performance
MAX_FILE_SIZE=10485760  # 10MB in bytes
MAX_AUDIO_LENGTH=300    # seconds
MAX_IMAGE_DIMENSION=2048
BATCH_SIZE=8
NUM_WORKERS=4

# Feature Flags
FEATURE_VQA_ENABLED=true
FEATURE_SEARCH_ENABLED=true
FEATURE_AUDIO_ENABLED=true
FEATURE_BATCH_PROCESSING=false

# Third-party APIs
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
PERSPECTIVE_API_KEY=  # For toxicity detection

# SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# Timeouts
REQUEST_TIMEOUT=30
MODEL_INFERENCE_TIMEOUT=10
CACHE_TIMEOUT=5
